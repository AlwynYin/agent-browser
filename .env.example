# Agent Browser Configuration
# Copy this file to .env and fill in your values

# Database
MONGO_URL=mongodb://localhost:27017/agent-browser

# AI Services (required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Browser Service Configuration
# Mode: 'cloud', 'local', or 'mock'
BROWSER_SERVICE_MODE=mock

# Browser-Use Cloud API (required when BROWSER_SERVICE_MODE=cloud)
BROWSER_USE_API_KEY=bu_your-browser-use-api-key-here

# Local Browser Service (required when BROWSER_SERVICE_MODE=local)
BROWSER_SERVICE_PORT=8001
BROWSER_SERVICE_AUTO_START=false

# Python Execution API (external service)
PYTHON_EXECUTION_API_URL=http://localhost:8000
PYTHON_EXECUTION_API_KEY=optional-api-key

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000